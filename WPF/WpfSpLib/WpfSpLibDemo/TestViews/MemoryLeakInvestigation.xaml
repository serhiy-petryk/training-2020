<Window x:Class="WpfSpLibDemo.TestViews.MemoryLeakInvestigation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MemoryLeakInvestigation" Height="450" Width="800">

    <Grid>
        <TextBox x:Name="TextBox" Text="AAA" IsReadOnly="False" BorderThickness="1" BorderBrush="Black" Background="Yellow" Height="30" Width="100"/>
        <Button x:Name="Button" Content="{Binding ElementName=TextBox, Path=Text, UpdateSourceTrigger=PropertyChanged}" Margin="200 0 0 0" Height="30" Width="100"
                Click="OnButtonClick"/>
    </Grid>
</Window>
