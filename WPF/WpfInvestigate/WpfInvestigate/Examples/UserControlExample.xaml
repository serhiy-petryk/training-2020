<Control x:Class="WpfInvestigate.Examples.UserControlExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfInvestigate.Examples"
             mc:Ignorable="d"
             Margin="5"
             Background="Violet"
             MinHeight="20" MinWidth="80"
             d:DesignHeight="450" d:DesignWidth="800">

    <Control.Resources>
        <SolidColorBrush x:Key="Test" Color="{StaticResource YellowColor}"/>
    </Control.Resources>

    <Control.Template>
        <ControlTemplate TargetType="local:UserControlExample">
            <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Aqua" >
                <Border Margin="0" Padding="2" Background="Yellow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                        BorderThickness="4" BorderBrush="{StaticResource Test}"
                        SnapsToDevicePixels="True" UseLayoutRounding="True">
                    <TextBlock Text="User control" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </Grid>

        </ControlTemplate>
    </Control.Template>
</Control>
