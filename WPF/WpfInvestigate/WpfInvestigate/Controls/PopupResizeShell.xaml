                                       Background="{TemplateBinding Background}" Foreground="{TemplateBinding Foreground}"
                                       RenderTransformOrigin="0.5 0.5" BorderThickness="0" Opacity="0.7">
                                    <Thumb.Style>
                                        <Style TargetType="Thumb">
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <TransformGroup>
                                                        <RotateTransform Angle="-135"/>
                                                        <TranslateTransform X="18" Y="18"/>
                                                    </TransformGroup>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Thumb}">
                                                        <Grid Background="{TemplateBinding Background}" Margin="0">
                                                            <Viewbox>
                                                                <Path Fill="{TemplateBinding Foreground}" RenderTransformOrigin="0.5 0.5"
                                                                      Data="M22,22H20V20H22V22M22,18H20V16H22V18M18,22H16V20H18V22M18,18H16V16H18V18M14,22H12V20H14V22M22,14H20V12H22V14Z">
                                                                    <Path.RenderTransform>
                                                                        <TransformGroup>
                                                                            <RotateTransform Angle="135"/>
                                                                            <TranslateTransform X="18" Y="0"/>
                                                                        </TransformGroup>
                                                                    </Path.RenderTransform>
                                                                </Path>
                                                            </Viewbox>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Thumb.Style>
                                </Thumb>-->
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ContentControl.Resources>
</ContentControl>
