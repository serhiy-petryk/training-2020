<UserControl x:Class="WpfInvestigate.Controls.ThemeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfInvestigate.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Vertical">
        <RadioButton GroupName="Theme" Margin="2">Windows 7</RadioButton>
        <RadioButton GroupName="Theme" Margin="2">Windows 10</RadioButton>
        <RadioButton GroupName="Theme" Margin="2">Windows 10 with borders</RadioButton>
        <local:ColorControl Margin="2 10 2 2"></local:ColorControl>
    </StackPanel>
</UserControl>
