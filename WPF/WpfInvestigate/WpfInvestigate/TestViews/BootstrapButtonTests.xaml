<Window x:Class="WpfInvestigate.TestViews.BootstrapButtonTests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WpfInvestigate.Controls"
        mc:Ignorable="d"
        Title="ColorPickerTests" Height="600" Width="900">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" ZIndex="1" Background="White">
            <Slider Grid.Column="0"
                    x:Name="uiScaleSlider"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    ToolTip="Determines the UI scale factor. Double-click to revert scaling back to 100%."
                    Height="100"
                    Value="1" Minimum="0.5" Maximum="4"
                    Orientation="Vertical"
                    Ticks="1"
                    IsSnapToTickEnabled="False"
                    TickPlacement="BottomRight"
                    AutoToolTipPlacement="BottomRight"
                    AutoToolTipPrecision="2"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.LayoutTransform>
                <ScaleTransform CenterX="0" CenterY="0" ScaleX="{Binding ElementName=uiScaleSlider,Path=Value}" ScaleY="{Binding ElementName=uiScaleSlider,Path=Value}"/>
            </Grid.LayoutTransform>

            <StackPanel Orientation="Vertical">
                <WrapPanel Orientation="Horizontal">
                    <UserControl Margin="5" Content="Test control" controls:ChromeEffects.Monochrome="Orange" Background="Red" BorderThickness="2" Width="100" Height="30"/>
                    <Button Margin="5" Content="Test control" controls:ChromeEffects.Monochrome="Orange" Background="Red" BorderThickness="2" Width="100" Height="30" Style="{StaticResource DefaultButtonBaseStyle}"
                        VerticalContentAlignment="Center"/>

                    <Button Margin="5" Content="Test animated control" controls:ChromeEffects.MonochromeAnimated="LightBlue" BorderThickness="2" Padding="8 4" Height="30" Style="{StaticResource DefaultButtonBaseStyle}"
                        controls:ControlEffects.CornerRadius="2" VerticalContentAlignment="Center"/>
                </WrapPanel>

                <WrapPanel Orientation="Horizontal">
                    <Label Content="Monochrome:" Margin="5 0" VerticalAlignment="Center"/>

                    <CheckBox x:Name="cbMonochromeEnabled" IsThreeState="False" IsChecked="True" VerticalAlignment="Center"/>
                    <Label Content="IsEnabled?" Margin="5 0" VerticalContentAlignment="Center"/>
                    <Button Margin="5 0" Content="Change color" Click="Monochrome_ChangeColor_OnClick"/>

                    <Grid Background="Black">
                        <Button x:Name="MonochromeButtonBlack" Margin="5" Content="Test control" controls:ChromeEffects.Monochrome="LightBlue" BorderThickness="2" Padding="8 4" Height="30" Style="{StaticResource DefaultButtonBaseStyle}"
                                IsEnabled="{Binding ElementName=cbMonochromeEnabled, Path=IsChecked}"
                                controls:ControlEffects.CornerRadius="2" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Background="White">
                        <Button x:Name="MonochromeButtonWhite" Margin="5" Content="Test control" controls:ChromeEffects.Monochrome="LightBlue" BorderThickness="2" Padding="8 4" Height="30" Style="{StaticResource DefaultButtonBaseStyle}"
                                IsEnabled="{Binding ElementName=cbMonochromeEnabled, Path=IsChecked}"
                                controls:ControlEffects.CornerRadius="2" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Background="Black">
                        <Button x:Name="MonochromeAnimatedButtonBlack" Margin="5" Content="Test animated control" controls:ChromeEffects.MonochromeAnimated="LightBlue" BorderThickness="2" Padding="8 4" Height="30" Style="{StaticResource DefaultButtonBaseStyle}"
                                IsEnabled="{Binding ElementName=cbMonochromeEnabled, Path=IsChecked}"
                                controls:ControlEffects.CornerRadius="2" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Background="White">
                        <Button x:Name="MonochromeAnimatedButtonWhite" Margin="5" Content="Test animated control" controls:ChromeEffects.MonochromeAnimated="LightBlue" BorderThickness="2" Padding="8 4" Height="30" Style="{StaticResource DefaultButtonBaseStyle}"
                                IsEnabled="{Binding ElementName=cbMonochromeEnabled, Path=IsChecked}"
                                controls:ControlEffects.CornerRadius="2" VerticalContentAlignment="Center"/>
                    </Grid>
                </WrapPanel>

                <WrapPanel Orientation="Horizontal">
                    <Label Content="Bichrome:" Margin="5 0" VerticalAlignment="Center"/>
                    <CheckBox x:Name="cbBichromeEnabled" IsThreeState="False" IsChecked="True" VerticalAlignment="Center"/>
                    <Label Content="IsEnabled?" Margin="5 0" VerticalContentAlignment="Center"/>
                    <Button Margin="5 0" Content="Change color" Click="Bichrome_ChangeColor_OnClick"/>

                    <Grid Background="Black">
                        <Button x:Name="BichromeButtonBlack" Style="{StaticResource DefaultButtonBaseStyle}" Width="140" Height="40" Content="Bichrome" FontWeight="Bold" BorderThickness="2" Margin="5"
                                IsEnabled="{Binding ElementName=cbBichromeEnabled, Path=IsChecked}"
                                controls:ChromeEffects.BichromeBackground="Blue" controls:ChromeEffects.BichromeForeground="Yellow"/>
                    </Grid>
                    <Grid Background="White">
                        <Button x:Name="BichromeButtonWhite" Style="{StaticResource DefaultButtonBaseStyle}" Width="140" Height="40" Content="Bichrome" FontWeight="Bold" BorderThickness="2" Margin="5"
                                IsEnabled="{Binding ElementName=cbBichromeEnabled, Path=IsChecked}"
                                controls:ChromeEffects.BichromeBackground="Blue" controls:ChromeEffects.BichromeForeground="Yellow"/>
                    </Grid>
                    <Grid Background="Black">
                        <Button x:Name="BichromeAnimatedButtonBlack" Style="{StaticResource DefaultButtonBaseStyle}" Width="140" Height="40" Content="Bichrome Animated" FontWeight="Bold" BorderThickness="2" Margin="5"
                                IsEnabled="{Binding ElementName=cbBichromeEnabled, Path=IsChecked}"
                                controls:ChromeEffects.BichromeAnimatedBackground="Blue" controls:ChromeEffects.BichromeAnimatedForeground="Yellow"/>
                    </Grid>
                    <Grid Background="White">
                        <Button x:Name="BichromeAnimatedButtonWhite" Style="{StaticResource DefaultButtonBaseStyle}" Width="140" Height="40" Content="Bichrome Animated" FontWeight="Bold" BorderThickness="2" Margin="5"
                                IsEnabled="{Binding ElementName=cbBichromeEnabled, Path=IsChecked}"
                                controls:ChromeEffects.BichromeAnimatedBackground="Blue" controls:ChromeEffects.BichromeAnimatedForeground="Yellow"/>
                    </Grid>
                </WrapPanel>

                <WrapPanel Orientation="Horizontal">
                    <Button Margin="4" Padding="4" Width="100" Content="Primary" FontSize="16" BorderThickness="0"
                            controls:FocusEffect.Brush="Aquamarine"
                            controls:FocusEffect.Thickness="11"
                            controls:ControlEffects.CornerRadius="4"
                            controls:ChromeEffects.MonochromeAnimated="#FF007BFF"
                            controls:ChromeEffects.ChromeMatrix="+0,100,+0,-7.5,100,-10,-10,100,-12.5, 65"/>
                    <Button Margin="4" Padding="4" Width="100" Content="Primary" FontSize="16" BorderThickness="10 0 20 0"
                            controls:FocusEffect.Brush="Aquamarine"
                            controls:FocusEffect.Thickness="2"
                            controls:ControlEffects.CornerRadius="14 1 18 8"
                            controls:ChromeEffects.MonochromeAnimated="#FF007BFF"
                            controls:ChromeEffects.ChromeMatrix="+0,100,+0,-7.5,100,-10,-10,100,-12.5, 65"/>

                    <Button Margin="4" Padding="4" Width="100" Content="Primary" FontSize="16" BorderThickness="0"
                            controls:FocusEffect.Brush="Aquamarine"
                            controls:FocusEffect.Thickness="10 10 0 20"
                            controls:ControlEffects.CornerRadius="14 0 18 8"
                            controls:ChromeEffects.MonochromeAnimated="#FF007BFF"
                            controls:ChromeEffects.ChromeMatrix="+0,100,+0,-7.5,100,-10,-10,100,-12.5, 65">
                        <Button.RenderTransform>
                            <RotateTransform CenterX="10" CenterY="20" Angle="10" />
                        </Button.RenderTransform>
                    </Button>

                    <Button Margin="4" Padding="4" Width="100" Content="Primary" FontSize="16" BorderThickness="4"
                            Style="{StaticResource DefaultButtonBaseStyle2}"
                            controls:FocusEffect.Brush="Aquamarine"
                            controls:FocusEffect.Thickness="1 5 10 15"
                            controls:ChromeEffects.MonochromeAnimated="#FF007BFF"
                            controls:ChromeEffects.ChromeMatrix="+0,100,+0,-7.5,100,-10,-10,100,-12.5, 65"/>

                    <Button Margin="4" Padding="4" Width="100" Content="Primary" FontSize="16" BorderThickness="4"
                            controls:FocusEffect.Brush="Aquamarine"
                            controls:ControlEffects.CornerRadius="4 1 8 2"
                            controls:ChromeEffects.MonochromeAnimated="#FF007BFF"
                            controls:ChromeEffects.ChromeMatrix="+0,100,+0,-7.5,100,-10,-10,100,-12.5, 65"/>
                    
                        <Button Style="{StaticResource BootstrapButton}" Content="BootstrapButton"/>
                </WrapPanel>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
