                    <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}"
                            Style="{StaticResource FlatButtonStyle}"
                            Width="24" Height="24"
                            controls:ControlEffects.PathData="M19.36,2.72L20.78,4.14L15.06,9.85C16.13,11.39 16.28,13.24 15.38,14.44L9.06,8.12C10.26,7.22 12.11,7.37 13.65,8.44L19.36,2.72M5.93,17.57C3.92,15.56 2.69,13.16 2.35,10.92L7.23,8.83L14.67,16.27L12.58,21.15C10.34,20.81 7.94,19.58 5.93,17.57Z"/>
                </WrapPanel>

                <WrapPanel Margin="0 5 0 0">
                    <Label Content="FlatButtonStyles for ToggleButtons"/>
                    <ToggleButton x:Name="PART_ToggleButton" Focusable="True" IsTabStop="False" Style="{StaticResource FlatButtonStyle}" Width="18" Padding="2 0"
                                  IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}"
                                  controls:ControlEffects.PathData="M34,52H31V38.5C29.66,39.9 28.16,40.78 26.34,41.45V37.76C27.3,37.45 28.34,36.86 29.46,36C30.59,35.15 31.36,34.15 31.78,33H34V52M45,52V48H37V45L45,33H48V45H50V48H48V52H45M45,45V38.26L40.26,45H45M18,57V23H23V20A2,2 0 0,1 25,18H29C30.11,18 31,18.9 31,20V23H45V20A2,2 0 0,1 47,18H51C52.11,18 53,18.9 53,20V23H58V57H18M21,54H55V31H21V54M48.5,20A1.5,1.5 0 0,0 47,21.5V24.5A1.5,1.5 0 0,0 48.5,26H49.5C50.34,26 51,25.33 51,24.5V21.5A1.5,1.5 0 0,0 49.5,20H48.5M26.5,20A1.5,1.5 0 0,0 25,21.5V24.5A1.5,1.5 0 0,0 26.5,26H27.5A1.5,1.5 0 0,0 29,24.5V21.5A1.5,1.5 0 0,0 27.5,20H26.5Z"/>
