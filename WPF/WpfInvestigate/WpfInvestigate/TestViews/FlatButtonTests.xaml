<Window x:Class="WpfInvestigate.TestViews.FlatButtonTests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WpfInvestigate.Controls"
        mc:Ignorable="d"
        Title="Flat Buttons" Height="800" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid ZIndex="1" Background="White">
            <Slider Grid.Column="0"
                x:Name="uiScaleSlider"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                ToolTip="Determines the UI scale factor. Double-click to revert scaling back to 100%."
                Height="100"
                Value="1" Minimum="0.5" Maximum="4"
                Orientation="Vertical"
                Ticks="1"
                IsSnapToTickEnabled="False"
                TickPlacement="BottomRight"
                AutoToolTipPlacement="BottomRight"
                AutoToolTipPrecision="2"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.LayoutTransform>
                <ScaleTransform CenterX="0" CenterY="0" ScaleX="{Binding ElementName=uiScaleSlider,Path=Value}" ScaleY="{Binding ElementName=uiScaleSlider,Path=Value}"/>
            </Grid.LayoutTransform>

            <StackPanel Orientation="Vertical">
                <Label Margin="10 0"/>
                <WrapPanel>
                    <Label Content="ClearButtonStyle"/>
                    <Button Style="{StaticResource ClearButtonStyle}" Background="Blue" Foreground="Yellow" Width="40" Height="40" BorderBrush="Red"/>
                    
                    <Label Content="FlatButtonStyle"/>
                    <Button Style="{StaticResource FlatButtonStyle}" Background="Blue" Foreground="Yellow" Width="40" Height="40" Content="X" FontSize="20" FontWeight="Bold" BorderBrush="Red"/>
                    <Button Style="{StaticResource FlatButtonStyle}" Background="Blue" Foreground="Yellow" Width="140" Height="40" Content="No border brush" FontWeight="Bold" BorderThickness="2"/>
                    <Button Style="{StaticResource SimpleButtonStyle}" Width="140" Height="40" Content="Bichrome" FontWeight="Bold" BorderThickness="2"
                            controls:ControlEffects.BichromeBackground="Blue" controls:ControlEffects.BichromeForeground="Yellow"/>

                    <Label Content="disabled FlatButtonStyle"/>
                    <Button Style="{StaticResource FlatButtonStyle}" IsEnabled="False" Background="Blue" Foreground="Yellow" Width="40" Height="40" Content="X" FontSize="20" FontWeight="Bold" BorderBrush="Red"/>
                </WrapPanel>

                <WrapPanel>
                    <DatePicker Width="150" controls:DatePickerExtension.IsNullable="True" controls:DatePickerExtension.ClearButton="True"
                    DisplayDateStart="2022/1/1" controls:WatermarkEffect.Watermark="watermark" BorderBrush="Red"/>
                    <DatePicker x:Name="dp" Background="Blue" Foreground="Blue" Width="150" controls:DatePickerExtension.IsNullable="True" controls:DatePickerExtension.ClearButton="True"
                    DisplayDateStart="2022/1/1" controls:WatermarkEffect.Watermark="watermark" BorderBrush="Red"/>
                    <Button Margin="10 0" Click="OnChangeBackgroundClick">Change background</Button>
                </WrapPanel>

                <WrapPanel>
                    <Label Content="IsEnabled?" Margin="4" VerticalAlignment="Center"/>
                    <CheckBox x:Name="IsEnabled" IsChecked="True" VerticalAlignment="Center"/>

                    <Label Content="Button in ToolBar"/>
                    <ToolBarPanel ClipToBounds="True" UseLayoutRounding="True" SnapsToDevicePixels="True" Height="40">
                        <ToolBar Background="OrangeRed" Foreground="Yellow" Height="40" Padding="0" BorderThickness="0" ToolBarTray.IsLocked="True" Margin="-5,0,-13,-4" ClipToBounds="True" UseLayoutRounding="True" SnapsToDevicePixels="True">
                            <Label Content="foreground = transparent" Foreground="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=ToolBar}}"/>
                            <Button Style="{StaticResource FlatButtonStyle}" Foreground="Transparent" Width="30" Height="30" Margin="0"
                        Content="X" FontSize="12" FontWeight="Bold" BorderBrush="Red" />
                            <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}" Margin="0"
                            Style="{StaticResource FlatButtonStyle}"
                            Width="24" Height="24" Foreground="Transparent"
                            controls:ControlEffects.PathData="M19.36,2.72L20.78,4.14L15.06,9.85C16.13,11.39 16.28,13.24 15.38,14.44L9.06,8.12C10.26,7.22 12.11,7.37 13.65,8.44L19.36,2.72M5.93,17.57C3.92,15.56 2.69,13.16 2.35,10.92L7.23,8.83L14.67,16.27L12.58,21.15C10.34,20.81 7.94,19.58 5.93,17.57Z"/>

                            <Label Content="foreground = not defined" Foreground="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=ToolBar}}"/>
                            <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}" Style="{StaticResource FlatButtonStyle}" Width="30" BorderThickness="0" Height="52" Content="X" FontSize="12" FontWeight="Bold" BorderBrush="Red" Margin="0"/>
                            <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}" Margin="0"
                            Style="{StaticResource FlatButtonStyle}"
                            Width="24" Height="24"
                            controls:ControlEffects.PathData="M19.36,2.72L20.78,4.14L15.06,9.85C16.13,11.39 16.28,13.24 15.38,14.44L9.06,8.12C10.26,7.22 12.11,7.37 13.65,8.44L19.36,2.72M5.93,17.57C3.92,15.56 2.69,13.16 2.35,10.92L7.23,8.83L14.67,16.27L12.58,21.15C10.34,20.81 7.94,19.58 5.93,17.57Z"/>

                            <Label Content="foreground = Yellow" Foreground="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=ToolBar}}"/>
                            <Button Style="{StaticResource FlatButtonStyle}" Foreground="Yellow" Width="30" Height="30" Margin="0"
                            Content="X" FontSize="12" FontWeight="Bold" BorderBrush="Red" />
                            <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}" Margin="0"
                            Style="{StaticResource FlatButtonStyle}"
                            Width="24" Height="24" Foreground="Yellow"
                            controls:ControlEffects.PathData="M19.36,2.72L20.78,4.14L15.06,9.85C16.13,11.39 16.28,13.24 15.38,14.44L9.06,8.12C10.26,7.22 12.11,7.37 13.65,8.44L19.36,2.72M5.93,17.57C3.92,15.56 2.69,13.16 2.35,10.92L7.23,8.83L14.67,16.27L12.58,21.15C10.34,20.81 7.94,19.58 5.93,17.57Z"/>

                            <Label Content="ClearButtonStyle" Foreground="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType=ToolBar}}"/>
                            <Button Style="{StaticResource ClearButtonStyle}" Foreground="Transparent" Width="30" Height="30" Margin="0" BorderBrush="Red"/>
                        </ToolBar>
                    </ToolBarPanel>
                </WrapPanel>

                <ToolBar ClipToBounds="False" Margin="-9 0 -13 0" Height="30" Background="Silver" IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}">
                    <Label Content="Toolbar" Background="GreenYellow" Margin="0 -1 0 -2"/>
                    <Button Style="{StaticResource FlatButtonStyle}"
                            Foreground="Transparent" Margin="1 -1 0 -2" Height="30" Width="29" Content="X" FontSize="12" FontWeight="Bold" BorderBrush="Red" />
                    <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}" Style="{StaticResource FlatButtonStyle}"
                            Foreground="Transparent" Margin="0 -1 0 -2" Height="30" Width="29" Background="Red"
                            controls:ControlEffects.PathData="M19.36,2.72L20.78,4.14L15.06,9.85C16.13,11.39 16.28,13.24 15.38,14.44L9.06,8.12C10.26,7.22 12.11,7.37 13.65,8.44L19.36,2.72M5.93,17.57C3.92,15.56 2.69,13.16 2.35,10.92L7.23,8.83L14.67,16.27L12.58,21.15C10.34,20.81 7.94,19.58 5.93,17.57Z"/>

                    <Button Style="{StaticResource FlatButtonStyle}"
                            Margin="0 -1 0 -2" Height="30" Width="29" Content="X" FontSize="12" FontWeight="Bold" BorderBrush="Red" />
                    <Button Style="{StaticResource FlatButtonStyle}"
                            Margin="0 -1 0 -2" Height="30" Width="29" Background="Red"
                            controls:ControlEffects.PathData="M19.36,2.72L20.78,4.14L15.06,9.85C16.13,11.39 16.28,13.24 15.38,14.44L9.06,8.12C10.26,7.22 12.11,7.37 13.65,8.44L19.36,2.72M5.93,17.57C3.92,15.56 2.69,13.16 2.35,10.92L7.23,8.83L14.67,16.27L12.58,21.15C10.34,20.81 7.94,19.58 5.93,17.57Z"/>

                    <Button Style="{StaticResource FlatButtonStyle}"
                            Foreground="Yellow" Margin="0 -1 0 -2" Height="30" Width="29" Content="X" FontSize="12" FontWeight="Bold" BorderBrush="Red" />
                    <Button Style="{StaticResource FlatButtonStyle}"
                            Margin="0 -1 0 -2" Height="30" Width="29" Background="Red"
                            Foreground="Yellow" controls:ControlEffects.PathData="M19.36,2.72L20.78,4.14L15.06,9.85C16.13,11.39 16.28,13.24 15.38,14.44L9.06,8.12C10.26,7.22 12.11,7.37 13.65,8.44L19.36,2.72M5.93,17.57C3.92,15.56 2.69,13.16 2.35,10.92L7.23,8.83L14.67,16.27L12.58,21.15C10.34,20.81 7.94,19.58 5.93,17.57Z"/>
                </ToolBar>

                <WrapPanel Margin="0 5 0 0">
                    <Label Content="NEW:FlatButtonStyles"/>
                    <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}" Style="{StaticResource FlatButtonStyle}" Background="Blue" Foreground="Yellow"
                            Width="40" Height="40" Content="X" FontSize="20" FontWeight="Bold" BorderBrush="Red" BorderThickness="0"/>
                    <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}" Style="{StaticResource FlatButtonStyle}" Background="Blue" Foreground="Yellow"
                            Width="40" Height="40" Content="X" FontSize="20" FontWeight="Bold" BorderBrush="Red" BorderThickness="4"/>
                    <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}" Style="{StaticResource FlatButtonStyle}" Background="Yellow" Foreground="Blue"
                            Width="40" Height="40" Content="X" FontSize="20" FontWeight="Bold" BorderBrush="Red" BorderThickness="4"/>
                    <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}" Style="{StaticResource FlatButtonStyle}"
                            Width="40" Height="40" Content="X" FontSize="20" FontWeight="Bold" BorderBrush="Red" BorderThickness="4"/>

                    <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}"
                            Style="{StaticResource ClearButtonStyle}" Background="Blue" Foreground="Yellow"
                            Width="24" Height="24" BorderThickness="2" BorderBrush="Red"/>
                    <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}"
                            Style="{StaticResource ClearButtonStyle}"
                            Width="24" Height="24"/>

                    <Button IsEnabled="{Binding ElementName=IsEnabled, Path=IsChecked}"
                            Style="{StaticResource FlatButtonStyle}" Background="Blue" Foreground="Yellow"
                            Width="24" Height="24" BorderBrush="Red" BorderThickness="2"
