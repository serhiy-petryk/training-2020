                    <Label Content="{Binding ElementName=TB2, Path=IsChecked}" VerticalAlignment="Center"/>

                    <TextBlock TextWrapping="WrapWithOverflow" Text="ClearButtonStyle:" VerticalAlignment="Center" Background="Aqua"/>
