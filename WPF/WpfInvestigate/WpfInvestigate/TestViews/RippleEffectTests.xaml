<Window x:Class="WpfInvestigate.TestViews.RippleEffectTests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfInvestigate.TestViews"
        xmlns:controls="clr-namespace:WpfInvestigate.Controls"
        mc:Ignorable="d"
        Title="RippleEffectTests" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid ZIndex="1" Background="White">
            <Slider Grid.Column="0"
                x:Name="uiScaleSlider"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                ToolTip="Determines the UI scale factor. Double-click to revert scaling back to 100%."
                Height="100"
                Value="1" Minimum="0.5" Maximum="4"
                Orientation="Vertical"
                Ticks="1"
                IsSnapToTickEnabled="False"
                TickPlacement="BottomRight"
                AutoToolTipPlacement="BottomRight"
                AutoToolTipPrecision="2"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.LayoutTransform>
                <ScaleTransform CenterX="0" CenterY="0" ScaleX="{Binding ElementName=uiScaleSlider,Path=Value}" ScaleY="{Binding ElementName=uiScaleSlider,Path=Value}"/>
            </Grid.LayoutTransform>

            <StackPanel Orientation="Vertical">
                <Label Margin="10 0"/>
                <WrapPanel>
                    <Label controls:RippleEffect.RippleColor="Red" Content="Test label"/>

                    <TextBlock TextWrapping="WrapWithOverflow" Text="PasswordBox:" VerticalAlignment="Center" Background="Aqua" Width="80"/>
                    <PasswordBox controls:RippleEffect.RippleColor="Red" Width="50" Background="Yellow"/>

                    <TextBlock TextWrapping="WrapWithOverflow" Text="FlattButton:" VerticalAlignment="Center" Background="Aqua" Width="80"/>
                    <Button controls:RippleEffect.RippleColor="White" Style="{StaticResource ClearButtonStyle}" Background="Blue" Foreground="Yellow" BorderThickness="1" BorderBrush="Black"
                            Width="20" Height="20" Margin="24 0 0 0" />
                    <Button controls:RippleEffect.RippleColor="White" Width="120" Height="30" Style="{StaticResource FlatButtonStyle}" Content="FlatButtonStyle" />
                    <Button controls:RippleEffect.RippleColor="White" Background="Blue" Foreground="Yellow" BorderThickness="4" BorderBrush="LightSkyBlue" Width="120" Height="30"
                            Style="{StaticResource FlatButtonStyle}" Content="FlatButtonStyle" />

                    <Button controls:RippleEffect.RippleColor="White" Background="Blue" BorderThickness="4" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome Blue" />

                    <Button controls:RippleEffect.RippleColor="White" Background="#FF20df20" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="MonochromeButtonStyle" />
                    <Button controls:RippleEffect.RippleColor="White" Background="#ffae00" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="MonochromeButtonStyle" />
                    <Button controls:RippleEffect.RippleColor="White" Background="#d9a026" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="MonochromeButtonStyle" />
                    <Button controls:RippleEffect.RippleColor="White" Background="red" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome Red" />
                    <Button controls:RippleEffect.RippleColor="White" Background="green" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Green Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="GreenYellow" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="GreenYellow Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="Yellow" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Yellow Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="White" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="White Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="Black" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Black Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="Gray" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Gray Monochrome" />

                    <!-- from https://www.w3schools.com/bootstrap/bootstrap_ref_css_buttons.asp -->
                    <Button controls:RippleEffect.RippleColor="White" Background="#5CB85C" Width="120" Height="30" Margin="10 0 0 0"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="#337AB7" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="#5BC0DE" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="#F0AD4E" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="#D9534F" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome" />

                    <!-- from https://getbootstrap.com/docs/4.0/utilities/colors/ -->
                    <Button controls:RippleEffect.RippleColor="White" Background="#007BFF" Width="120" Height="30" Margin="10 0 0 0"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="#6C757D" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="#28A745" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="#DC3545" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="#FFC107" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="#17A2B8" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome" />
                    <Button controls:RippleEffect.RippleColor="White" Background="#343A40" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="Monochrome" />

                    <Button controls:RippleEffect.RippleColor="White" Background="White" Foreground="Yellow" BorderThickness="4" BorderBrush="LightSkyBlue" Width="120" Height="30"
                            Style="{StaticResource MonochromeButtonStyle}" Content="White" />
                    <Button controls:RippleEffect.RippleColor="White" Width="70" Height="30" Content="Button" />
                    <Button controls:RippleEffect.RippleColor="Black" Width="70" Height="30" Content="Button" />
                </WrapPanel>

                <WrapPanel>
                </WrapPanel>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
