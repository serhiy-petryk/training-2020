<ResourceDictionary x:Class="WpfInvestigate.Theme.Common"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Controls/FlatButton.xaml"/>
        <ResourceDictionary Source="/Controls/MonochromeButton.xaml"/>
        <ResourceDictionary Source="/Theme/Flags.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="2" po:Freeze="True" />

    <Style TargetType="DatePickerTextBox">
        <Setter Property="Background" Value="Transparent"/>
        <EventSetter Event="Loaded" Handler="OnDatePickerTextBoxLoaded" />
    </Style>

</ResourceDictionary>