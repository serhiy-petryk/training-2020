<Window x:Class="AppCore5.DataGridTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCore5"
        mc:Ignorable="d"
        Title="DataGridTest" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
        <!--<Style TargetType="DataGridCell">
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>-->
    </Window.Resources>
    <Grid Margin="10">
        <WrapPanel Orientation="Vertical" Width="700" Background="Yellow">
            <Button Content="Test" Click="ButtonBase_OnClick"/>
            <DataGrid Name="dgSimple">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="First Name" Binding="{Binding Name}" FontWeight="Bold">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Blue"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="Margin" Value="5"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </WrapPanel>
    </Grid>
</Window>