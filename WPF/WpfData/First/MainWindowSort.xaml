               VerticalAlignment="Top">
      <WrapPanel DockPanel.Dock="Top" Background="AliceBlue" Margin="0px"  Name="GroupPanel">
        <WrapPanel.Resources>
          <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="2,0" />
          </Style>
        </WrapPanel.Resources>
        <Button>Group</Button>
        <Button>panel</Button>
      </WrapPanel>
